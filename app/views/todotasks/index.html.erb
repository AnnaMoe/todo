<%= link_to "Add a new Todo", new_todotask_path %>

<ul class="todos">
  <% @todos.each do |todo| %>
    <li class= "<%= "completed" if todo.completed? %>">
      <%= todo.title %>
      <% if todo.completed? %>
        <%= button_to "Mark incomplete", todotask_completion_path(todo), method: :delete %>
      <% else %>
        <%= button_to "Mark complete", todotask_completion_path(todo) %>
      <% end %>
    </li>
  <% end %>
</ul>